<Page
    x:Class="Homework_4_3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Homework_4_3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:ConnectionId='1' Name="NameBox" InputScope="Text" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,78,0,0" Width="145"/>
        <TextBox x:ConnectionId='2' Name="PhoneBox" InputScope="TelephoneNumber" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.704,4.531" Margin="10,140,0,0" Width="145"/>
        <TextBox x:ConnectionId='3' Name="EmailBox" InputScope="EmailNameOrAddress" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,200,0,0" Width="145"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Margin="160,78,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Top" Margin="160,140,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email Address" VerticalAlignment="Top" Margin="160,200,0,0"/>
        
        <Button x:ConnectionId='4' Name="GlobalButton" Content="Global Variable" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,265,0,0"                           />
        <Button x:ConnectionId='5' Name="QueryButton" Content="Query" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,265,0,0" RenderTransformOrigin="1.557,0.625"                          />
        <Button x:ConnectionId='6' Name="ApplicationButton" Content="App" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="272,265,0,0"                                />
       



    </Grid>
</Page>

